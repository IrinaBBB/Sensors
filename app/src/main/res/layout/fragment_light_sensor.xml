<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".lightsensor.LightSensorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".lightsensor.LightSensorFragment">

        <TextView
            android:id="@+id/light_sensor_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif"
            android:text="@string/ambient_light_lx"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="@+id/lightsensor_main_image_view"
            app:layout_constraintStart_toStartOf="@+id/lightsensor_main_image_view"
            app:layout_constraintTop_toBottomOf="@+id/lightsensor_main_image_view" />


        <TextView
            android:id="@+id/light_sensor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif"
            android:text="@string/_0"
            android:textColor="@color/textColor"
            android:textSize="42sp"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="@+id/light_sensor_label_text"
            app:layout_constraintStart_toStartOf="@+id/light_sensor_label_text"
            app:layout_constraintTop_toBottomOf="@+id/light_sensor_label_text"
            tools:text="0" />


        <ImageView
            android:id="@+id/lightsensor_main_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/cube"
            android:src="@drawable/sun"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>